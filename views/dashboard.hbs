<h6>Dashboard</h6>

<h3>Welcome {{ name }}</h3>
<p>Here are your experiences</p>

{{#if lessons}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#reach lessons}}
                <tr>
                    <td><a href="/lessons/{{id}}"></a>{{title}}</td>
                    <td>{{createdAt}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
<p>You have not created any lessons</p>
{{/if}}